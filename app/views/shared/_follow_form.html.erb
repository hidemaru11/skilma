<% unless current_user == user %>
  <div id="follow_form">
  <% if current_user.following?(user) %>
    <%= form_with current_user.active_relationships.find_by(following_id: @user.id), method: :delete, local: true do |f| %>
      <%= f.submit "フォロー解除" %>
    <% end %>
  <% else %>
    <%= form_with model: current_user.active_relationships.build, local: true do |f| %>
      <%= hidden_field_tag :following_id, user.id %>
      <%= f.submit "フォローする" %>
    <% end %>
  <% end %>
  </div>
<% end %>