<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="notification_detail">
  <div class="notification_list">
    <div class="user_icon">
      <% if visitor.image.present? %>
        <%= image_tag visitor.image_url(:small) %>
      <% else %>
        <%= image_tag "default_user.png" %>
      <% end %>
    </div>
    <div class="detail">
      <% case notification.action %>
      <% when "message" %>
        <%= link_to rooms_path do %>
          <%= visitor.username %>さんからメッセージが届きました
        <% end %>
        <span class="date"><%= "（" + time_ago_in_words(notification.created_at) + "前）" %></span>
      <% when "follow" %>
        <%= link_to user_path(visitor) do %>
          <%= visitor.username %>
        <% end %>
        さんがあなたをフォローしました
      <% end %>
    </div>
  </div>
</div>