<div class="contents">
  <div class="contents_inner">
    <div class="side_search">
      <div class="side_search_inner">
        <div class="search_key">
          <h4>キーワードで検索する</h4>
          <div class="search_form">
            <%= form_with( url: skills_path, method: :get, local:true) do |f| %>
              <%= f.text_field :search, value: params[:search] %>
              <%= f.submit "検索" %>
            <% end %>
          </div>
        </div>
        <div class="search_tag">
          <h4>タグで絞り込む</h4>
          <div class="tag_list">
            <% if @tags.present? %>
              <% @tags.each do |tag| %>
                <%= link_to "#{tag.name}", skills_path(tag: tag.name), class: "tag" %>
              <% end %>
            <% else %>
              タグはありません。
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="main">
      <div class="main_header">
        <h1>スキルをさがす</h1>
      </div>
      <div class="links">
        <%= link_to "自分の投稿をチェック", root_path, class: "link_small" %>
        <%= link_to "スキルを投稿する", new_skill_path, class: "new" %>
      </div>
      <div class="main_list">
        <% if @skills.present? %>
          <% @skills.each do |skill| %>
            <div class="list_card">
              <div class="card_top">
                <%= link_to skill_path(skill) do %>
                  <h4><%= skill.title %></h4>
                <% end %>
                <div class="tags">
                  <% skill.tags.each do |tag| %>
                    <%= link_to "#{tag.name}", skills_path(tag: tag.name), class: "tag" %>
                  <% end %>
                </div>
              </div>
              <div class="card_middle">
                <%= simple_format skill.content %>
              </div>
              <div class="card_bottom">
                <div class="user_icon">
                  <% if skill.user.image.present? %>
                    <%= image_tag skill.user.image[:small].url %>
                  <% else %>
                    <%= image_tag "default_user.png" %>
                  <% end %>
                </div>
                <div class="card_bottom_name">
                  <%= link_to skill.user.username, user_path(skill.user) %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="list_card">
            <div class="alert">
              <h4>一致する投稿はありません。</h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>