<div class="contents">
  <div class="back_link">
    <%= link_to "一覧に戻る", skills_path %>
  </div>
  <div class="contents_inner">
    <div class="side_user">
      <div class="side_user_inner">
        <div class="user_icon">
          【アイコン】
        </div>
        <p class="username"><%= link_to @skill.user.username, user_path(@skill.user) %></p>
        <% if user_signed_in? && @skill.user_id != current_user.id %>
          <div class="link follow">
            <%= link_to "フォローする", root_path %>
          </div>
          <div class="link message">
            <%= link_to "メッセージを送る", root_path %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="main">
      <div class="main_detail back_white">
        <div class="detail_top">
          <%= link_to "タグ", root_path, class: "tags" %>
          <h2 class="title bottom_line"><%= @skill.title %></h2>
        </div>  
        <div class="detail_middle">
          <div class="content">
            <%= simple_format @skill.content %>
          </div>
        </div>
        <div class="detail_bottom">
          <% if user_signed_in? && current_user.id == @skill.user.id %>
            <div class="admin_actions">
              <%= link_to "投稿を編集する", edit_skill_path(@skill), class: "edit_link" %>
              <%= link_to "投稿を削除する", skill_path(@skill), method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "delete_link" %>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="plan_wrapper">
        <h3>プラン</h3>
        <% if @plans.present? %>
          <% @plans.each do |plan| %>
            <div class="main_plan back_white">
              <div class="list_card">
                <div class="card_top">
                  <%= link_to skill_plan_path(id: plan.id, skill_id: plan.skill.id) do %>
                    <h4><%= plan.title %></h4>
                  <% end %>
                  <div class="info">
                    <span>
                      <%= plan.budget.to_s(:delimited) %>円
                      <% if plan.budget_unit.name != "" %>
                        ／
                      <% end %>
                    <%= plan.budget_unit.name %></span>
                  </div>
                </div>
                <div class="card_middle">
                  <%= simple_format plan.content %>
                </div>
                <div class="link_show">
                  <%= link_to "詳細を見る", skill_plan_path(id: plan.id, skill_id: plan.skill.id) %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        <div class="links">
          <% if user_signed_in? && current_user.skill && current_user.skill.id == @skill.id %>
            <%= link_to "プランを追加する", new_skill_plan_path(current_user.skill), class: "new" %>
          <% end %>
        </div>
      </div>

      <div class="message_wrapper">
        <% if user_signed_in? && @skill.user_id != current_user.id %>
          <div class="link message">
            <%= link_to "メッセージを送る", root_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>