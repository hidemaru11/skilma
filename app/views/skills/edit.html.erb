<div class="contents">
  <div class="back_link">
    <%= link_to "一覧に戻る", skills_path %>
  </div>
  <div class="contents_inner">
    <div class="side_user">
      <div class="side_user_inner">
        <div class="user_icon">
          <% if @skill.user.image.present? %>
            <%= image_tag @skill.user.image_url(:small) %>
          <% else %>
            <%= image_tag "default_user.png" %>
          <% end %>
        </div>
        <p class="username"><%= link_to @skill.user.username, @skill.user %></p>
      </div>
    </div>

    <div class="main">
      <div class="main_header_bold">
        <h4>自分のスキルを編集する</h4>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>