<div class="account_page">
  <div class="account_page__inner">
    <div class="account_page__header">
      <h2>LOGIN</h2>
    </div>
    <div class="account_page__user_form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="field_input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>
        </div>

        <div class="field">
          <div class="field_input">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
          </div>
        </div>
        
        <div class="actions">
          <%= f.submit "ログイン", class: "btn" %>
        </div>

        <div class="guest_login">
          <%= link_to 'ゲストログイン', guest_sign_in_path, method: :post %>
        </div>
        
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログインしたままにする" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="devise_links">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>