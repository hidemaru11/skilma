<div class="account_page">
  <div class="account_page__inner">
    <div class="account_page__header">
      <h2>SIGN UP!</h2>
    </div>
    <div class="account_page__user_form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        
        <div class="field">
          <div class="field_input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>
        </div>
        
        <div class="field">
          <div class="field_input">
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "ユーザー名" %>
          </div>
        </div>
        
        <div class="field">
          <div class="field_input">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "8文字以上のパスワード" %>
          </div>
        </div>
      
        <div class="field">
          <div class="field_input">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード" %>
          </div>
        </div>
      
        <div class="actions">
          <%= f.submit "登録する", class: "btn" %>
        </div>
      <% end %>
    </div>
    <div class="devise_links">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>


