<div class="profile">
  <div class="profile_header">
    <div class="inner">
      <div class="user_icon">
        <div class="user_icon_image">
          <% if @user.image.present? %>
            <%= image_tag @user.image[:small].url %>
          <% else %>
            <%= image_tag "default_user.png" %>
          <% end %>
        </div>
      </div>
      <div class="username">
        <%= @user.username %>
      </div>
    </div>
  </div>
  <div class="profile_inner">
    <div class="profile_main">
      <div class="list_card">
        <div class="follow_list">
          <%= render 'shared/stats' %>
        </div>
      </div>
      <div class="list_card">
        <h4 class="card_header bottom_line">自己紹介</h4>
        <div class="card_profile">
          <%= simple_format @user.profile %>
        </div>

        <h4 class="card_header">スキル紹介</h4>
        <% if @user.skill %>
          <div class="card_skill">
            <%= link_to @user.skill.title, @user.skill %>
          </div>
        <% end %>
        <div class="card_links">
          <% if user_signed_in? && current_user == @user %>
            <div class="admin_actions">
              <%= link_to "プロフィールを編集する", edit_user_path(@user), class: "edit_link" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="profile_side">
      <div class="link follow">
        <%= render 'shared/follow_form', user: @user if user_signed_in? %>
      </div>
      <div class="link message">
        <% if user_signed_in? && @user.id != current_user.id %>
          <% if @isRoom == true %>
            <%= link_to "メッセージを送る", room_path(@roomId) %>
          <% else %>
            <%= form_with model: @room do |f| %>
              <%= fields_for @entry do |e| %>
                <%= e.hidden_field :user_id, value: @user.id %>
              <% end %>
              <%= f.submit "メッセージを送る" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>