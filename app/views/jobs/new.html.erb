<div class="contents">
  <div class="back_link">
    <%= link_to "一覧に戻る", jobs_path %>
  </div>
  <div class="contents_inner">
    <div class="side_user">
      <div class="side_user_inner">
        <div class="user_icon">
          <% if current_user.image.present? %>
            <%= image_tag current_user.image[:small].url %>
          <% else %>
            <%= image_tag "default_user.png" %>
          <% end %>
        </div>
        <p class="username"><%= link_to current_user.username, user_path(current_user) %></p>
      </div>
    </div>
    
    <div class="main">
      <div class="main_header_bold">
        <h4>仕事を依頼する</h4>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>