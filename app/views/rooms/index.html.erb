<div class="contents">
  <div class="contents_inner">
    <div class="side_search">
      <div class="side_search_inner">
        <div class="search_key">
          <h4>ユーザーを絞り込む</h4>
          <div class="search_form">
            <%= form_with( url: rooms_path, method: :get, local:true) do |f| %>
              <%= f.text_field :search, value: params[:search] %>
              <%= f.submit "検索" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="main">
      <div class="main_header">
        <h1>メッセージ</h1>
      </div>
      <div class="main_list">
        <% if @partnerEntries.present? %>
          <% @partnerEntries.each do |entry| %>
            <div class="list_card">
              <div class="card_top">
                <div class="user_icon">
                  <% if entry.user.image.present? %>
                    <%= image_tag entry.user.image[:small].url %>
                  <% else %>
                    <%= image_tag "default_user.png" %>
                  <% end %>
                </div>
                <%= link_to room_path(entry.room.id) do %>
                <span class="name"><%= entry.user.username %></span><span>さんとのメッセージ</span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="list_card">
            <div class="alert">
              <h4>メッセージはありません。</h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>