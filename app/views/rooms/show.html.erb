<h1>メッセージ</h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
  <%= e.user.username %>さん
<% end %>

<hr>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <strong><%= m.content %></strong>
    by <%= m.user.username %>さん
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @message do |f| %>
  <%= f.text_area :content, :placeholder => "メッセージを入力して下さい" %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <br>
  <%= f.submit "送信する" %>
<% end %>