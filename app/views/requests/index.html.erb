<div class="contents">
  <div class="contents_inner">
    <div class="side_search">
      <div class="side_search_inner">
        <div class="search_key">
          <h4>キーワードで検索する</h4>
          <div class="search_form">
            input_form
          </div>
        </div>
        <div class="search_tag">
          <h4>タグ</h4>
          <div class="search_form">
            input_form
          </div>
        </div>
      </div>
    </div>

    <div class="main">
      <div class="main_header">
        <h1>音楽仲間をさがす</h1>
      </div>
      <div class="links">
        <%= link_to "自分の投稿をチェック", root_path, class: "link_small" %>
        <%= link_to "投稿はこちらから", new_request_path, class: "new" %>
      </div>
      <div class="main_list">
        <% if @requests.present? %>
          <% @requests.each do |request| %>
            <div class="list_card">
              <div class="card_top">
                <%= link_to request_path(request) do %>
                  <h4><%= request.title %></h4>
                <% end %>
              </div>
              <div class="card_middle">
                <%= simple_format request.content %>
              </div>
              <div class="card_bottom">
                <div class="card_bottom_icon">
                  <span>アイコン</span>
                </div>
                <div class="card_bottom_name">
                  <%= link_to request.user.username, user_path(request.user) %>
                </div>
                <div class="card_bottom_area">
                  <span><%= request.area %></span>
                </div>
                <div class="card_bottom_time">
                  <span><%= time_ago_in_words(request.created_at)+"前" %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="list_card">
            <div class="alert">
              <h4>まだ投稿されたスレッドはありません。</h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

